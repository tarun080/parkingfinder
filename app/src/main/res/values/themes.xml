<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ParkingFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Widget customization -->
        <item name="materialButtonStyle">@style/Widget.ParkingFinder.Button</item>
        <item name="materialCardViewStyle">@style/Widget.ParkingFinder.CardView</item>
        <item name="toolbarStyle">@style/Widget.ParkingFinder.Toolbar</item>
    </style>

    <!-- Main theme that inherits from the base -->
    <style name="Theme.ParkingFinder" parent="Base.Theme.ParkingFinder">
        <!-- Additional customizations specific to the main theme can go here -->
    </style>

    <!-- No ActionBar variant for activities that use CollapsingToolbarLayout -->
    <style name="Theme.ParkingFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for splash screen (basic approach without SplashScreen API) -->
    <style name="Theme.ParkingFinder.Splash" parent="Theme.ParkingFinder.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Button style -->
    <style name="Widget.ParkingFinder.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.ParkingFinder.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.ParkingFinder.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- TextAppearance for parking name -->
    <style name="TextAppearance.ParkingFinder.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextAppearance for address -->
    <style name="TextAppearance.ParkingFinder.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Text style for parking details labels - Fixed by creating a proper style name -->
    <style name="TextAppearance.ParkingFinder.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>